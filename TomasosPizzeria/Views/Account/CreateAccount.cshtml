
@model TomasosPizzeria.ViewModels.AccountViewModel


<div class="card" id="welcome">
    <h1>Welcome to  Tomasos Pizzeria</h1>
    <br />
    <h3> Create New Account </h3>
</div>
<br />

<form asp-controller="Account" asp-action="CreateAccount" method="post" id="create">

    <label>User Name</label>

    @*<label asp-for="@Model.AnvandarNamn"></label>*@
    <br />
    <input asp-for="@Model.AnvandarNamn" maxlength="20" />
    <span asp-validation-for="@Model.AnvandarNamn"></span>

    <br />
    <label>Password</label>
    @*<label asp-for="@Model.Losenord"></label>*@
    <br />
    <input asp-for="@Model.Losenord" maxlength="20" />
    <span asp-validation-for="@Model.Losenord"></span>
    <br />

    <label>Name</label>
    @*<label asp-for="@Model.Namn"></label>*@
    <br />
    <input asp-for="@Model.Namn" maxlength="40" />
    <span asp-validation-for="@Model.Namn"></span>
    <br />

    <label>Address</label>
    @*<label asp-for="@Model.Gatuadress"></label>*@
    <br />
    <input asp-for="@Model.Gatuadress" maxlength="50" />
    <span asp-validation-for="@Model.Gatuadress"></span>
    <br />

    <label>Postal Code </label>
    @*<label asp-for="@Model.Postnr"></label>*@
    <br />
    <input asp-for="@Model.Postnr" maxlength="20" />
    <span asp-validation-for="@Model.Postnr"></span>
    <br />

    <label>City</label>
    @*<label asp-for="@Model.Postort"></label>*@
    <br />
    <input asp-for="@Model.Postort" maxlength="20" />
    <span asp-validation-for="@Model.Postort"></span>
    <br />

    <label>Email</label>
    @*<label asp-for="@Model.Email"></label>*@
    <br />
    <input asp-for="@Model.Email" maxlength="30" />
    <span asp-validation-for="@Model.Email"></span>

    <br />
    <label>Telephone</label>
    @*<label asp-for="@Model.Telefon"></label>*@
    <br />
    <input asp-for="@Model.Telefon" maxlength="20" />
    <span asp-validation-for="@Model.Telefon"></span>
    <br /><br />


    <input type="submit" value="Sign Up" />

    <br /><br /> <br />


</form>

